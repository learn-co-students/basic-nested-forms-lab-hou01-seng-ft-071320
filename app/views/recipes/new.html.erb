
<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.fields_for :ingredients do |ingd| %>
        <%= ingd.label :name %>
        <%= ingd.text_field :name %>
        <%= ingd.label :quantity %>
        <%= ingd.text_field :quantity %>
     <% end %>
     <%= f.submit %>
<% end %>   
